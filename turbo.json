{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "NOCODB_API_ENDPOINT",
        "NOCODB_API_TOKENS",
        "LINK_APP_BASE_URL",
        "LINK_APP_NOCODB_TABLE_ID",

        "OR67_STUDENTS",
        "NEXT_PUBLIC_OR67_GROUPS",
        "NEXT_PUBLIC_OR67_SUBJECTS",
        "NEXT_PUBLIC_OR67_TEACHERS",
        "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID"
    ],
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "type-check": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
