{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/public/*": ["public/*"],
            "@ui/*": ["../../packages/ui/src/*"]
        }
    },
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
